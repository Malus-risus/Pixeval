    xmlns:winUi="using:FluentIcons.WinUI"
    Background="Transparent"
    Loaded="FeedPage_OnLoaded"
    mc:Ignorable="d">

    <Page.Resources>
        <feeds:FeedItemDataTemplateSelector
            x:Key="FeedItemDataTemplateSelector"
            BookmarkIllust="{StaticResource BookmarkIllustTemplate}"
            BookmarkNovel="{StaticResource BookmarkNovelTemplate}"
            FollowUser="{StaticResource FollowUserTemplate}"
            PostIllust="{StaticResource PostIllustTemplate}" />
        <DataTemplate x:Key="BookmarkIllustTemplate" x:DataType="feeds:FeedItemViewModel">
            <Grid Width="350" Height="120">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid
                    Grid.Column="0"
                    Width="80"
                    Height="80"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    CornerRadius="25">
                    <Border
                        BorderBrush="{x:Bind IconSecondaryBrush}"
                        BorderThickness="1"
                        CornerRadius="50">
                        <Grid
                            Width="75"
                            Height="75"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center" />
                    </Border>
                    <Border
                        Width="70"
                        Height="70"
                        BorderBrush="Gray"
                        BorderThickness="0.5"
                        CornerRadius="50">
                        <Grid
                            Width="70"
                            Height="70"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            CornerRadius="50">
                            <Grid.Background>
                                <ImageBrush ImageSource="{x:Bind UserAvatar, Mode=OneWay}" Stretch="UniformToFill" />
                            </Grid.Background>
                        </Grid>
                    </Border>
                </Grid>
                <Grid
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    Height="1"
                    Margin="80,0,0,0"
                    Background="{x:Bind IconSecondaryBrush}" />
                <Grid
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    Width="5"
                    Height="20"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Background="{x:Bind IconSecondaryBrush}"
                    CornerRadius="3" />
                <Grid
                    Grid.Column="1"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Center">
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition Height="20" />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid
                        Grid.Row="0"
                        Margin="10,0,0,0"
                        HorizontalAlignment="Stretch">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="190" />
                            <ColumnDefinition Width="65" />
                        </Grid.ColumnDefinitions>
                        <TextBlock
                            Grid.Column="0"
                            Margin="0,5,0,0"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Top"
                            FontSize="18"
                            Foreground="{x:Bind IconBackground}"
                            Text="{x:Bind Entry.PostUserName}"
                            TextTrimming="CharacterEllipsis" />
                        <TextBlock
                            Grid.Column="1"
                            Margin="0,0,5,0"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Bottom"
                            Style="{StaticResource CaptionStrongTextBlockStyle}"
                            Text="{x:Bind PostDateFormatted}" />
                    </Grid>
                    <TextBlock
                        Grid.Row="2"
                        Width="255"
                        Margin="10,0,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        FontSize="13"
                        TextTrimming="CharacterEllipsis"
                        TextWrapping="WrapWholeWords">
                        <Run x:Uid="/Timeline/BookmarkIllustTemplateSegment1" />
                        <Run
                            FontFamily="Bahnschrift"
                            FontWeight="Bold"
                            Foreground="{x:Bind IconBackground}"
                            Text="{x:Bind Entry.FeedName}" />
                        <Run x:Uid="/Timeline/BookmarkIllustTemplateSegment2" />
                    </TextBlock>
                </Grid>
                <NavigationViewItemSeparator
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    VerticalAlignment="Bottom" />
            </Grid>
        </DataTemplate>
