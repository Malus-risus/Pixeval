    <SplitView
        HorizontalAlignment="Stretch"
        VerticalAlignment="Stretch"
        DisplayMode="Inline"
        IsPaneOpen="True"
        OpenPaneLength="450"
        PaneBackground="Transparent"
        PanePlacement="Left">
        <SplitView.Pane>
            <controls:EntryView
                Padding="0,10,0,0"
                VerticalAlignment="Stretch"
                Background="Transparent"
                HasNoItem="{x:Bind _viewModel.HasNoItem, Mode=OneWay}"
                IsLoadingMore="{x:Bind ItemsView.IsLoadingMore, Mode=OneWay}">
                <controls:EntryView.Content>
                    <controls:AdvancedItemsView
                        x:Name="ItemsView"
                        HorizontalAlignment="Stretch"
                        IsItemInvokedEnabled="False"
                        ItemsSource="{x:Bind _viewModel.DataProvider.View, Mode=OneWay}"
                        SelectionMode="Single">
                        <controls:AdvancedItemsView.ItemTemplate>
                            <DataTemplate x:DataType="feeds:FeedItemViewModel">
                                <ItemContainer>
                                    <timeline:TimelineUnit
                                        Content="{x:Bind Mode=OneWay}"
                                        ContentTemplateSelector="{StaticResource FeedItemDataTemplateSelector}"
                                        DataContext="{x:Bind Mode=OneWay}"
                                        FoldThreshold="1000"
                                        FoldedDefaultPlacement="Left"
                                        Loaded="TimelineUnit_OnLoaded"
                                        TimelineAxisPlacement="{x:Bind Placement, Mode=OneWay}"
                                        TitleIconBackground="{x:Bind IconBackground, Mode=OneWay}">
                                        <timeline:TimelineUnit.TitleIcon>
                                            <winUi:SymbolIconSource Foreground="{x:Bind IconForeground, Mode=OneWay}" Symbol="{x:Bind Icon, Mode=OneWay}" />
                                        </timeline:TimelineUnit.TitleIcon>
                                    </timeline:TimelineUnit>
                                </ItemContainer>
                            </DataTemplate>
                        </controls:AdvancedItemsView.ItemTemplate>
                        <controls:AdvancedItemsView.ItemTransitionProvider>
                            <LinedFlowLayoutItemCollectionTransitionProvider />
                        </controls:AdvancedItemsView.ItemTransitionProvider>
                    </controls:AdvancedItemsView>
                </controls:EntryView.Content>
            </controls:EntryView>
        </SplitView.Pane>
    </SplitView>


